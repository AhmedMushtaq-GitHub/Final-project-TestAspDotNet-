@model IEnumerable<TestAspDotNet.Model.UserRole>;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "User Roles";
}
@*<h1>New Roles</h1>*@
<div class="container my-5">
    <div class="row">
        <div class="col-lg-4 mx-auto border border-success border-5">
            <table class="table">
                <thead>
                    <tr>
                        <th colspan="3"><h1 class="text-success text-center">User Roles</h1></th>
                    </tr>
                    <tr>

                        <th class="text-center">Id</th>
                        <th class="text-center">Name</th>
                        <th class="text-center">Actions</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td><a asp-controller="" asp-action="">Update</a> | <a asp-controller="" asp-action="">Delete</a>  </td>

                        </tr>

                    }
                </tbody>

            </table>

        </div>

    </div>
</div>