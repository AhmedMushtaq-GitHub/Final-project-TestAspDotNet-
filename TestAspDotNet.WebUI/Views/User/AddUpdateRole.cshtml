@model TestAspDotNet.Model.UserRole;

@{
    ViewData["Title"] = "UserRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row">
        <div class="col-lg-4 mx-auto border border-success border-5">
            <h3 class="text-success text-center">AddUpdate Role</h3>
            <form asp-action="AddUpdateRole">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" type="text" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="d-grid col-lg-6 mx-auto my-3">
                    <button type="submit" class="btn btn-success">Create or Update</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}