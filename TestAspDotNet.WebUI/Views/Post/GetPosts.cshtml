@model IEnumerable<TestAspDotNet.Model.Post>
@{
    ViewData["Title"] = "GetPosts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <table class="table table-sm  table-bordered mt-3 align-middle">
                <thead>

                    <tr>
                        <th colspan="5" class="display-1 text-success test-center" > Posts</th>
                    </tr>
                    <tr>
                        <th colspan="5" class=" test-center"> <a class="btn btn-success  link-light display-6 text-decoration-none alighn-self-center" asp-action="AddUpdatePost">CreatPost</a>></th>

                    </tr>
                    <tr>
                        <th class="fs-6 text-center">Sr#</th>
                        <th class="fs-6 text-center">Title</th>
                        <th class="fs-6 text-center">Short Description</th>
                        <th class="fs-6 text-center">Category</th>
                        <th class="fs-6 text-center">Actions</th>
                    </tr>

                </thead>
                <tbody>
                    @{
                        int i = 0;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="fs-6 text-center">@Convert.ToInt32(++ i)</td>
                                <td class="fs-6 text-center">@item.Title</td>
                                <td class="fs-6 text-center">@item.ShortDescription</td>
                                <td class="fs-6 text-center">@item.Category.Name</td>
                                <td class="fs-6 text-center w-25">
                                    <a class="btn-sm btn-success text-decoration-none" asp-controller="Post" asp-action="AddUpdatePost" asp-route-Id="@item.Id">Edit</a> |
                                    <a class="btn-sm btn-success text-decoration-none" asp-controller="Post" asp-action="DetailsPost" asp-route-Id="@item.Id">Details</a> |
                                    <a class="btn-sm btn-success text-decoration-none" asp-controller="Post" asp-action="DeletePost" asp-route-Id="@item.Id">Delete</a>
                                </td>


                            </tr>
                        }
                    }

                </tbody>


            </table>

        </div>













    </div>
</div>