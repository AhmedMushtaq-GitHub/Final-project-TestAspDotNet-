@model TestAspDotNet.Model.Post
@{
    ViewData["Title"] = "Details Post";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />
<br />
<div class="container">

    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered border-success text-center">
               

                    <tr>
                        <th colspan="9">
                            <h3 class="text-center">Posts</h3>
                        </th>
                    </tr>

                    <tr>
                        <th colspan="9">
                            <a class="btn btn-success " asp-controller="Post" asp-action="CreatePost">Creat Post</a>
                        </th>
                    </tr>
                    <tr>
                      
                        <th>Title</th>
                        <th>Short Description</th>
                        <th>Description</th>
                        <th>Image</th>
                        <th>Posted On</th>
                        <th>Category</th>
                        <th>Author Name</th>
                        <th>Post Status</th>
                        
                        <th>Actions</th>
                    </tr>

                   
                            <tr>
                              
                                <td>@Model.Title</td>
                                <td>@Model.ShortDescription</td>
                                <td>@Model.Description</td>
                                <td>
                                    <img src="@Model.Image" width="100" height="100"/>
                                </td>
                                <td>@Model.PostedOn</td>
                                <td>@Model.Category.Name</td>
                               
                                <td>@Model.User.Name</td>
                                
                                <td>@Model.PostStatus.Name</td>
                               
                                <td class=" text-center w-25">
                            <a class="btn-sm btn-success text-decoration-none" asp-controller="Post" asp-action="UpdatePost" asp-route-Id="@Model.Id">Edit this Post</a>

                                 </td>


                            </tr>
               


            </table>
        </div>
    </div>
</div>