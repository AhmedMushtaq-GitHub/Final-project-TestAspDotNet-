@model TestAspDotNet.Model.User;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />
<br />

<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <h1>Login</h1>
            <form asp-action="Login" method="post">
               <div asp-validation-summary="ModelOnly" class="text-danger"></div>
               
                    <lable asp-for="EmailAddress" >Email</lable>
                    <input asp-for="EmailAddress" class="form-control" placeholder="Enter Email" />
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
              
               
                    <lable asp-for="Password" >Password</lable>
                    <input type="text" asp-for="Password"  class="form-control" placeholder="Enter Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                
                @if(string.IsNullOrEmpty(ViewBag.Error))
                {
                    <h4 class="text-danger">@ViewBag.Error</h4>
                }
               
                    <button type="submit" value="Login" class="btn btn-primary">Login</button>
                
            </form>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}